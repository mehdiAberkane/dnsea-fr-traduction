      <talk_answer link_index="n016_trader_borin-1-c" mid="26"><![CDATA[<html> (... ... ...) </html>]]></talk_answer>
      <talk_question mid="25"><![CDATA[<html>$Blacksmith Borin$<BR>...<BR>...<BR>...<BR>Now scram before I chop you!</html>]]></talk_question>
